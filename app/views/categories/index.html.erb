<h1>Categorias</h1>

<table>
  <thead>
    <tr>
      <th> Nome </th>
    </tr>
  </thead>
  <tbody>
      <% @categories.each do |category| %>
      <tr>
      <td><%= category.description %></td>
      <td><%= link_to 'Editar', edit_category_path(category) %></td>
      <td><%= link_to 'Delete', category_path(category),
                  method: :delete,
                  data: { confirm: 'Tem certeza?'}  %></td>
      <td><%= %></td>
      </tr>
      <% end %>
  </tbody>
</table>

<br>
<%=link_to 'Nova categoria', new_category_path%>