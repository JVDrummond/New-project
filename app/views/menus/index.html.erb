<h1>Cardápio</h1>

<table>
  <tr>
    <th> Nome </th>
  </tr>

  <% @menus.each do |menu| %>
    <tr>
      <td><%= menu.description%></td>
      <td><%= link_to 'Visualizar', menu_path(menu) %></td>
      <td><%= link_to 'Editar', edit_menu_path(menu) %></td>
      <td><%= link_to 'Excluir', menu_path(menu),
                          method: :delete,
                          data: { confirm: 'Tem certeza?'} %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Novo cardápio', new_menu_path%>