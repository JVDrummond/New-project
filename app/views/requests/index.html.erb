<h1>Lista de pedidos</h1>

<table>
  <tr>
    <th> NÂ°</th>
    <th> Item(s) </th>
    <th> Tempo estimado </th>
    <th> Quantidade </th>
  </tr>

  <% @requests.each do |request| %>
    <tr>
      <td><%= request.number_request%></td>
      <td><%= request.item.name%></td>
      <td><%= request.estimated_time.strftime("%H:%M") %></td>
      <td><%= request.quantity%></td>
      <td><%= link_to 'Edit', edit_request_path(request) %></td>
      <td><%= link_to 'Excluir', request_path(request),
                          method: :delete,
                          data: { confirm: 'Tem certeza?'} %></td>
    </tr>
  <% end %>
</table>

