<%= form_for @menu_request do |form| %>

  <p>
    <%= form.label :Price %><br>
    <%= form.number_field :price, min: 0, step: :any %>
  </p>

  <p>
    <%= form.label :Item %><br>
    <%= form.collection_select :item_id, Item.all, :id, :name, prompt: "Selecione um item"%>
  </p>

  <p>
    <%= form.label :Menu %><br>
    <%= form.collection_select :menu_id, Menu.all, :id, :description, prompt: "Selecione um menu"%>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>